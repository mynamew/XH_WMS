<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    tools:context=".mvp.deviceinfo.DeviceInfoActivity">
    <include layout="@layout/title_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/bg_set_userinfo"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:gravity="center_vertical"

            android:text="@string/set_deviceinfo_num"/>
        <EditText
            android:id="@+id/et_set_deviceinfo_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="@string/please_input_device_num"

            android:textColorHint="#999"
            android:textColor="#333"
            android:textSize="14sp"
            android:background="@null"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_set_deviceinfo_mac"
        style="@style/tv_userinfo"
        android:paddingLeft="20px"
        android:text="@string/set_deviceinfo_mac"/>
    <TextView
        android:id="@+id/tv_set_deviceinfo_ip"
        style="@style/tv_userinfo"
        android:paddingLeft="55px"
        android:text="@string/set_deviceinfo_ip"/>
    <Button
        android:id="@+id/btn_deviceinfo_confirm"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/selector_btn_bg_login"
        android:text="@string/comfirm_set"
        android:textColor="#fff"
        android:layout_marginTop="200px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textSize="18sp"/>
</LinearLayout>

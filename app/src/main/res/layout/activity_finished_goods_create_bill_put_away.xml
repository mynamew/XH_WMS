<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/set_bg"
        android:orientation="vertical"
        tools:context="com.timi.sz.wms_android.mvp.UI.stock_in.putaway.PutAwayActivity">

        <include layout="@layout/title_head"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divide_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5px"
                    android:paddingTop="20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:text="@string/create_task_orderno"
                        android:textColor="#333"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_receive_pro_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5px"
                    android:paddingTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="@string/create_orderno_date_tip"
                        android:textColor="#333"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_create_orderno_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5px"
                    android:paddingTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="@string/orderno_num"
                        android:textColor="#333"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_orderno_total_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5px"
                    android:paddingTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="@string/header_wait_count_num"
                        android:textColor="#333"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_wait_count_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text=" "
                        android:textColor="@color/login_txt_color"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20px"
                    android:paddingTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="@string/have_count_num"
                        android:textColor="#333"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_have_count_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text=" "
                        android:textColor="@color/login_txt_color"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20px"
                    android:paddingTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="@string/in_stock_total_num"
                        android:textColor="#333"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_in_stock_total_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="13sp"/>
                </LinearLayout>

                <include layout="@layout/footer_put_away"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100px"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/selector_btn_bg_login"
            android:text="@string/create_product_orderno"
            android:textColor="#fff"
            android:textSize="18sp"/>

    </RelativeLayout>

</LinearLayout>

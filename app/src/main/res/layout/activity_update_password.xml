<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/set_bg"
    >
    <include layout="@layout/title_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/bg_set_userinfo"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="70px"
            android:gravity="center_vertical"
            android:text="@string/update_password_oldpsw"/>
        <EditText
            android:id="@+id/et_set_update_password_oldpsw"
            android:layout_width="0dp"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="@string/please_input_old_psw"
            android:textColorHint="#999"
            android:textColor="#333"
            android:textSize="14sp"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_set_update_password_clear_old_password"
            android:layout_width="80px"
            android:layout_height="60px"
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:src="@mipmap/set_clear"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/bg_set_userinfo"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="70px"
            android:gravity="center_vertical"

            android:text="@string/update_password_newpsw"/>
        <EditText
            android:id="@+id/et_set_update_password_newpsw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="@string/please_input_new_password"
            android:textColorHint="#999"
            android:textColor="#333"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_set_update_password_clear_new_password"
            android:layout_width="80px"
            android:layout_height="60px"
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:src="@mipmap/set_clear"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/bg_set_userinfo"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:gravity="center_vertical"
            android:text="@string/upadte_password_repeat"/>
        <EditText
            android:id="@+id/et_set_update_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="@string/please_repeat_input_password"
            android:textColorHint="#999"
            android:textColor="#333"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:background="@null"/>
        <ImageView
            android:id="@+id/iv_set_update_password_clear_repeat_password"
            android:layout_width="80px"
            android:layout_height="60px"
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:src="@mipmap/set_clear"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/cb_set_update_password_showpsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="150px"
        android:text="@string/show_password"
        android:textColorHint="@color/tab_txt_unselect"
        android:textColorLink="@color/tab_txt_unselect"
        android:textColor="@color/tab_txt_unselect"
        />
    <Button
        android:id="@+id/btn_set_update_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/selector_btn_bg_login"
        android:text="@string/confirm"
        android:textColor="#fff"
        android:layout_marginTop="10px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textSize="18sp"/>
</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检验项目"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_product_standard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="IPQC抽检外观"
                    android:textColor="#666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="检验项目"
                    android:textColor="#333"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rectangle_et_unfocused"
                    android:orientation="horizontal"
                    android:padding="5px">

                    <com.jzk.spinnerlibrary.MaterialSpinner
                        android:id="@+id/spinner_quality_type"
                        android:layout_width="match_parent"
                        android:layout_height="64px"
                        android:textSize="13sp"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="200dp"
                        app:ms_hint_color="@color/color_666"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="64px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_btn_bg_login"
                    android:text="检验"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginBottom="10px"
                android:layout_marginTop="10px"
                android:background="@color/divide_color"/>

            <LinearLayout
                android:id="@+id/ll_bad_code"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_marginRight="30px"
                    >

                    <TextView
                        android:id="@+id/tv_add_material_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:text="@string/bad_code"
                        android:textColor="#333"
                        android:textSize="13sp"
                        />

                    <EditText
                        android:id="@+id/et_bad_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20px"
                        android:layout_toEndOf="@id/tv_add_material_tip"
                        android:layout_toRightOf="@id/tv_add_material_tip"
                        android:background="@drawable/selector_et"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="@string/input_bad_code"
                        android:imeOptions="actionSearch"
                        android:inputType="textVisiblePassword"
                        android:padding="10px"
                        android:paddingLeft="20px"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="13sp"/>

                    <ImageView
                        android:id="@+id/iv_bad_code_scan"
                        android:layout_width="100px"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:paddingLeft="60px"
                        android:src="@mipmap/ic_scan"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_bad_group_tip"
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical"
                    android:text="@string/bad_code_group"
                    android:textColor="#333"
                    android:textSize="13sp"
                    />

                <LinearLayout
                    android:id="@+id/ll_bad_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/bg_rectangle_et_unfocused"
                    android:orientation="horizontal"
                    android:padding="5px">

                    <com.jzk.spinnerlibrary.MaterialSpinner
                        android:id="@+id/spinner_bad_groups"
                        android:layout_width="match_parent"
                        android:layout_height="64px"
                        android:textSize="13sp"
                        app:ms_dropdown_height="wrap_content"
                        app:ms_dropdown_max_height="200dp"
                        app:ms_hint_color="@color/color_666"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="不良代码"
                    android:textColor="@color/color_333"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_bac_code"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"

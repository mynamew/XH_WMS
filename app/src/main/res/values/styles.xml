<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/MyInterludeStyle</item>

    </style>

    <style name="AppBaseThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyInterludeStyle</item>
    </style>

    <style name="MyInterludeStyle">
        <item name="android:activityOpenEnterAnimation">@transition/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@transition/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@transition/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@transition/slide_out_right</item>
    </style>
    <!--分割线的style-->
    <style name="divider_10_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:background">#e5e5e5</item>
    </style>
    <!--分割线的style-->
    <style name="divide_line">
        <item name="android:layout_width">304dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginRight">20px</item>
        <item name="android:background">#e5e5e5</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/login_txt_color</item>
        <item name="colorControlActivated">@color/login_txt_color</item>
    </style>
    <!--Dialog的样式-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#002a2a2a</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!--设置的tab 的style-->
    <style name="set_tab_item">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_set_tab_check</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@mipmap/set_next_page</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <!--popwindow 弹出的动画-->

    <style name="popWindow_animation_push">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>
    <!--用户信息界面显示的textview-->
    <style name="tv_userinfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_marginBottom">4px</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:paddingLeft">10px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_set_userinfo</item>
    </style>
    <!--自定义设备控件-->
    <declare-styleable name="DeviceView">
        <attr name="textTip" format="string"/>
        <attr name="textInput" format="string"/>
        <attr name="noMapStrTip" format="string"/>
        <attr name="isScanByCamera" format="boolean"/>
        <attr name="isContainSpinner" format="boolean"/>
    </declare-styleable>
</resources>
